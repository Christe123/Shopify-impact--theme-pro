<div class="customer-reviews-section">
  <div class="reviews-container">
    
    {% if section.settings.title != blank %}
      <h2 class="reviews-title">{{ section.settings.title }}</h2>
    {% endif %}

    <div class="reviews-slider">
      <div class="reviews-track">
        {% for block in section.blocks %}
          <div class="review-card" {{ block.shopify_attributes }}>
            
            <div class="review-header">
              {% if block.settings.avatar != blank %}
                <img src="{{ block.settings.avatar | image_url: width: 80 }}" alt="{{ block.settings.customer_name }}" class="review-avatar">
              {% else %}
                <div class="review-avatar-placeholder">
                  {{ block.settings.customer_name | slice: 0 }}
                </div>
              {% endif %}
              
              <div class="review-info">
                <p class="review-name">{{ block.settings.customer_name }}</p>
                <div class="review-stars">
                  {% for i in (1..5) %}
                    <span class="star">★</span>
                  {% endfor %}
                </div>
              </div>
            </div>

            <p class="review-text">{{ block.settings.review_text }}</p>

          </div>
        {% endfor %}
      </div>

      {% if section.blocks.size > 1 %}
        <div class="reviews-dots">
          {% for block in section.blocks %}
            <button class="dot {% if forloop.first %}active{% endif %}" data-slide="{{ forloop.index0 }}"></button>
          {% endfor %}
        </div>
      {% endif %}
    </div>

  </div>
</div>

<style>
.customer-reviews-section {
  background: {{ section.settings.background_color }};
  padding: {{ section.settings.section_padding }}px 20px;
  overflow: hidden;
}

.reviews-container {
  max-width: {{ section.settings.max_width }}px;
  margin: 0 auto;
}

.reviews-title {
  font-size: {{ section.settings.title_size }}px;
  color: {{ section.settings.title_color }};
  text-align: {{ section.settings.title_align }};
  margin-bottom: {{ section.settings.title_spacing }}px;
  font-weight: 600;
}

.reviews-slider {
  position: relative;
}

.reviews-track {
  display: flex;
  gap: {{ section.settings.card_gap }}px;
  overflow-x: auto;
  scroll-behavior: smooth;
  scrollbar-width: none;
  -ms-overflow-style: none;
  padding-bottom: 10px;
}

.reviews-track::-webkit-scrollbar {
  display: none;
}

.review-card {
  min-width: {{ section.settings.card_width }}px;
  background: {{ section.settings.card_background }};
  border-radius: {{ section.settings.card_radius }}px;
  padding: {{ section.settings.card_padding }}px;
  box-shadow: {{ section.settings.card_shadow }};
  border: {{ section.settings.card_border_width }}px solid {{ section.settings.card_border_color }};
  flex-shrink: 0;
}

.review-header {
  display: flex;
  align-items: center;
  gap: 15px;
  margin-bottom: 15px;
}

.review-avatar {
  width: {{ section.settings.avatar_size }}px;
  height: {{ section.settings.avatar_size }}px;
  border-radius: 50%;
  object-fit: cover;
  border: 2px solid {{ section.settings.avatar_border_color }};
}

.review-avatar-placeholder {
  width: {{ section.settings.avatar_size }}px;
  height: {{ section.settings.avatar_size }}px;
  border-radius: 50%;
  background: {{ section.settings.placeholder_bg }};
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: {{ section.settings.avatar_size | divided_by: 2 }}px;
  font-weight: bold;
}

.review-info {
  flex: 1;
}

.review-name {
  font-size: {{ section.settings.name_size }}px;
  color: {{ section.settings.name_color }};
  font-weight: 600;
  margin: 0 0 5px 0;
  font-style: {{ section.settings.name_style }};
}

.review-stars {
  display: flex;
  gap: 2px;
}

.review-stars .star {
  color: {{ section.settings.star_color }};
  font-size: {{ section.settings.star_size }}px;
}

.review-text {
  font-size: {{ section.settings.text_size }}px;
  color: {{ section.settings.text_color }};
  line-height: 1.6;
  margin: 0;
  font-style: {{ section.settings.text_style }};
}

.reviews-dots {
  display: flex;
  justify-content: center;
  gap: 8px;
  margin-top: 20px;
}

.dot {
  width: 10px;
  height: 10px;
  border-radius: 50%;
  background: {{ section.settings.dot_color }};
  border: none;
  cursor: pointer;
  padding: 0;
  transition: all 0.3s ease;
}

.dot.active {
  background: {{ section.settings.dot_active_color }};
  width: 25px;
  border-radius: 5px;
}

/* Mobile */
@media (max-width: 768px) {
  .customer-reviews-section {
    padding: {{ section.settings.mobile_padding }}px 15px;
  }

  .reviews-title {
    font-size: {{ section.settings.mobile_title_size }}px;
  }

  .review-card {
    min-width: {{ section.settings.mobile_card_width }}%;
  }

  .review-text {
    font-size: {{ section.settings.mobile_text_size }}px;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const track = document.querySelector('.reviews-track');
  const dots = document.querySelectorAll('.dot');
  
  if (!track || dots.length === 0) return;

  dots.forEach((dot, index) => {
    dot.addEventListener('click', () => {
      const cardWidth = track.querySelector('.review-card').offsetWidth;
      const gap = {{ section.settings.card_gap }};
      track.scrollLeft = (cardWidth + gap) * index;
      
      dots.forEach(d => d.classList.remove('active'));
      dot.classList.add('active');
    });
  });

  // Auto-update dots on scroll
  track.addEventListener('scroll', () => {
    const cardWidth = track.querySelector('.review-card').offsetWidth;
    const gap = {{ section.settings.card_gap }};
    const currentIndex = Math.round(track.scrollLeft / (cardWidth + gap));
    
    dots.forEach((d, i) => {
      d.classList.toggle('active', i === currentIndex);
    });
  });
});
</script>

